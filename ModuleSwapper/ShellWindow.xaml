<Window x:Class="ModuleSwapper.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModuleSwapper"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:mcommon="clr-namespace:ModuleCommon;assembly=ModuleCommon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{x:Static mcommon:RegionNames.TopRegionName}" Background="red">
            
        </ContentControl>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static mcommon:RegionNames.MiddleRegionName}" Background="Blue">
            
        </ContentControl>
        <ContentControl Grid.Row="2" prism:RegionManager.RegionName="{x:Static mcommon:RegionNames.BottomRegionName}" Background="Green">
            
        </ContentControl>
    </Grid>
</Window>
